<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourapp.smartspacer.hebrew">

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application>

        <!-- SmartSpacer Target Provider -->
        <provider
            android:name=".HebrewCalendarTargetProvider"
            android:authorities="${applicationId}.target.hebrewcalendar"
            android:exported="true"
            android:permission="com.kieronquinn.app.smartspacer.permission.ACCESS_SMARTSPACER_TARGETS">
            <intent-filter>
                <action android:name="com.kieronquinn.app.smartspacer.TARGET" />
            </intent-filter>
        </provider>

        <!-- Complication Provider for %hebdate -->
        <provider
            android:name=".HebdateComplicationProvider"
            android:authorities="${applicationId}.complication.hebdate"
            android:exported="true"
            android:permission="com.kieronquinn.app.smartspacer.permission.ACCESS_SMARTSPACER_TARGETS">
            <intent-filter>
                <action android:name="com.kieronquinn.app.smartspacer.COMPLICATION" />
            </intent-filter>
            <meta-data
                android:name="complication_name"
                android:value="Hebrew Date" />
            <meta-data
                android:name="complication_icon"
                android:resource="@drawable/ic_hebrew_date" />
        </provider>

        <!-- Complication Provider for %zman -->
        <provider
            android:name=".ZmanComplicationProvider"
            android:authorities="${applicationId}.complication.zman"
            android:exported="true"
            android:permission="com.kieronquinn.app.smartspacer.permission.ACCESS_SMARTSPACER_TARGETS">
            <intent-filter>
                <action android:name="com.kieronquinn.app.smartspacer.COMPLICATION" />
            </intent-filter>
            <meta-data
                android:name="complication_name"
                android:value="Prayer Times" />
            <meta-data
                android:name="complication_icon"
                android:resource="@drawable/ic_prayer_times" />
        </provider>

    </application>

</manifest>
